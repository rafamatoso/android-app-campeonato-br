<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear2_id"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:background="@drawable/bg_soccer_grass"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/list_pos_id"
                android:layout_width="26dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Pos"
                android:textAlignment="center"
                android:textColor="@color/textRanking"
                android:textSize="@dimen/ranking_text_size" />

            <TextView
                android:id="@+id/list_name_id"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textColor="@color/textRanking"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/list_teamlogo_id"
                android:layout_width="26dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/list_points_id"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="P"
                android:textAlignment="center"
                android:textColor="@color/textRanking"
                android:textSize="@dimen/ranking_text_size" />

            <TextView
                android:id="@+id/list_games_id"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="J"
                android:textAlignment="center"
                android:textColor="@color/textRanking"
                android:textSize="@dimen/ranking_text_size" />

            <TextView
                android:id="@+id/list_victory_id"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="V"
                android:textAlignment="center"
                android:textColor="@color/textRanking"
                android:textSize="@dimen/ranking_text_size" />

            <TextView
                android:id="@+id/list_draw_id"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="E"
                android:textAlignment="center"
                android:textColor="@color/textRanking"
                android:textSize="@dimen/ranking_text_size" />

            <TextView
                android:id="@+id/list_lose_id"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="D"
                android:textAlignment="center"
                android:textColor="@color/textRanking"
                android:textSize="@dimen/ranking_text_size" />

            <TextView
                android:id="@+id/list_gp_id"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="GP"
                android:textAlignment="center"
                android:textColor="@color/textRanking"
                android:textSize="@dimen/ranking_text_size" />

            <TextView
                android:id="@+id/list_gc_id"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="GC"
                android:textAlignment="center"
                android:textColor="@color/textRanking"
                android:textSize="@dimen/ranking_text_size" />

            <TextView
                android:id="@+id/list_sg_id"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="SG"
                android:textAlignment="center"
                android:textColor="@color/textRanking"
                android:textSize="@dimen/ranking_text_size" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>